{
  "manifest_version": 3,
  "name": "ADHD EzApply: Job Tracker",
  "short_name": "EzApply",
  "version": "1.0.0",
  "author": "KeerLi",
  "description": "Capture and track job applications with minimal friction and gamified feedback",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open ADHD Job Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

